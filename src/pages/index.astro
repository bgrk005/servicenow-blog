---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import TechnicalBlock from '../components/TechnicalBlock.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const published = posts
  .filter((post) => !post.data.draft)
  .sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf());
---

<BaseLayout title="Home" description="Insights and tutorials about ServiceNow development">
  <TechnicalBlock />
  <h1 class="text-3xl font-bold mt-8 mb-6">Latest Posts</h1>
  <div class="grid gap-8 sm:grid-cols-2">
    {published.map((post) => (
      <PostCard frontmatter={post.data} href={`/posts/${post.slug}/`} />
    ))}
  </div>
</BaseLayout>
