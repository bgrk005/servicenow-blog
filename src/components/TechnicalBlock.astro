---
interface Pillar {
  title: string;
  description: string;
  highlights: string[];
}

const slugify = (value: string) =>
  value
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)/g, '');

const pillars: Pillar[] = [
  {
    title: 'Platform Foundation',
    description:
      'Design multi-instance architectures with strong access controls, scoped apps, and automated testing so every release is predictable.',
    highlights: [
      'Scoped app patterns & update sets',
      'ATF coverage and health scan gates',
      'Role-based access controls (RBAC)'
    ],
  },
  {
    title: 'Automation & Intelligence',
    description:
      'Translate process maps into Flow Designer logic, orchestration, and machine learning models that resolve work before it hits the queue.',
    highlights: [
      'Flow Designer + Integration Hub',
      'Playbooks, Virtual Agent, RPA',
      'Predictive Intelligence signals'
    ],
  },
  {
    title: 'Integration & Observability',
    description:
      'Connect ITSM, ITOM, SecOps, and HRSD using reusable spokes, events, and telemetry dashboards that keep teams aligned.',
    highlights: [
      'Event + webhook driven patterns',
      'MID Server & external credentials',
      'Operational health dashboards'
    ],
  },
];
---
<section class="mt-12 rounded-2xl border border-neutral/10 bg-white/70 p-6 shadow-sm backdrop-blur dark:border-neutral-dark/80 dark:bg-neutral-dark/80">
  <div class="grid gap-8 md:grid-cols-2">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-primary dark:text-primary-dark">ServiceNow technical block</p>
      <h2 class="mt-2 text-3xl font-bold text-neutral dark:text-neutral-light">
        Ship resilient ServiceNow workloads with an opinionated architecture baseline
      </h2>
      <p class="mt-4 text-base text-neutral dark:text-neutral-light">
        This block distils the guardrails we apply to every ServiceNow engagement: clear separation of duties, testable automations,
        and observable integrations. Use it to quickly communicate expectations with stakeholders or to kick-start delivery runbooks.
      </p>
      <dl class="mt-6 grid gap-4 sm:grid-cols-2">
        <div class="rounded-xl border border-primary/30 p-4 text-sm dark:border-primary-dark/30">
          <dt class="text-neutral/70 dark:text-neutral-light/70">Supported workflows</dt>
          <dd class="text-lg font-semibold text-neutral dark:text-neutral-light">ITSM · ITOM · SecOps · HRSD</dd>
        </div>
        <div class="rounded-xl border border-primary/30 p-4 text-sm dark:border-primary-dark/30">
          <dt class="text-neutral/70 dark:text-neutral-light/70">Delivery focus</dt>
          <dd class="text-lg font-semibold text-neutral dark:text-neutral-light">Architecture · Automation · Insights</dd>
        </div>
      </dl>
      <a
        href="/about"
        class="mt-6 inline-flex items-center justify-center rounded-full bg-primary px-5 py-2 text-sm font-semibold text-white transition hover:bg-primary/80 dark:bg-primary-dark dark:text-neutral-light"
      >
        Learn how we work
      </a>
    </div>
    <div class="space-y-4">
      {pillars.map((pillar) => (
        <article
          class="rounded-2xl border border-neutral/20 bg-neutral-light/40 p-5 dark:border-neutral-dark dark:bg-neutral/20"
          aria-labelledby={slugify(pillar.title)}
        >
          <h3 id={slugify(pillar.title)} class="text-xl font-semibold text-primary dark:text-primary-dark">
            {pillar.title}
          </h3>
          <p class="mt-2 text-sm text-neutral dark:text-neutral-light/90">{pillar.description}</p>
          <ul class="mt-3 list-disc space-y-1 pl-4 text-sm text-neutral dark:text-neutral-light">
            {pillar.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
